{
  "exclude": ["node_modules", "build", "test", "jest.config.js"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "moduleDetection": "force",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  }
}
